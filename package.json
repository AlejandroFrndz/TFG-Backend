{
    "name": "backend",
    "version": "1.0.0",
    "description": "",
    "main": "index.ts",
    "scripts": {
        "start": "node dist/src/index.js",
        "build": "tsc --project tsconfig.json && tsc-alias -p tsconfig.json",
        "dev": "set NODE_ENV=dev&& ts-node -r tsconfig-paths/register src/index.ts",
        "dev:unix": "NODE_ENV=dev ts-node -r tsconfig-paths/register src/index.ts",
        "dev:watch": "nodemon --watch src -e ts --exec npm run dev",
        "dev:watch:unix": "nodemon --watch src -e ts --exec npm run dev:unix",
        "docker:up": "docker-compose up -d",
        "docker:up:linux": "docker-compose -f docker-compose-linux.yaml up -d",
        "typeorm": "node --require ts-node/register --require tsconfig-paths/register ./node_modules/typeorm/cli.js",
        "typeorm:migration:generate": "npm run typeorm -- migration:generate -d src/core/infra/typeORM/migrationsDataSource.ts src/core/infra/typeORM/migrations/migration",
        "test": "echo \"Error: no test specified\" && exit 1"
    },
    "author": "alexFrndz",
    "license": "ISC",
    "devDependencies": {
        "@types/bcrypt": "^5.0.0",
        "@types/cors": "^2.8.12",
        "@types/express": "^4.17.13",
        "@types/http-status-codes": "^1.2.0",
        "@types/jsonwebtoken": "^8.5.8",
        "@types/lodash": "^4.14.181",
        "@types/morgan": "^1.9.3",
        "@types/node": "^17.0.21",
        "nodemon": "^2.0.15",
        "prettier": "^2.6.0",
        "ts-node": "^10.7.0",
        "tsc-alias": "^1.6.7",
        "tsconfig-paths": "^3.14.0",
        "typescript": "^4.6.2"
    },
    "dependencies": {
        "bcrypt": "^5.0.1",
        "cors": "^2.8.5",
        "dotenv": "^16.0.0",
        "express": "^4.17.3",
        "http-status-codes": "^2.2.0",
        "jsonwebtoken": "^8.5.1",
        "lodash": "^4.17.21",
        "morgan": "^1.10.0",
        "pg": "^8.7.3",
        "reflect-metadata": "^0.1.13",
        "typeorm": "^0.3.0"
    }
}
